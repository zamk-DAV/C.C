rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Security Rules
    // Users can read and write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Couple Security Rules
    match /couples/{coupleId} {
        // Check if the authenticated user is a member of this couple
        function isMember() {
           return request.auth != null && (
               (resource != null && request.auth.uid in resource.data.members) ||
               (resource == null && request.auth.uid in request.resource.data.members)
           );
        }

        // Allow access if user is a member
        allow read, write: if isMember();

        // Subcollection: Events (Calendar)
        match /events/{eventId} {
            // Inherit membership check from parent couple document
            // We must retrieve the parent document to check members
            function isCoupleMember() {
               let couple = get(/databases/$(database)/documents/couples/$(coupleId));
               return request.auth != null && request.auth.uid in couple.data.members;
            }
            
            allow read, write: if isCoupleMember();
        }

        // Subcollection: Messages (Chat)
        match /messages/{messageId} {
            function isCoupleMember() {
               let couple = get(/databases/$(database)/documents/couples/$(coupleId));
               return request.auth != null && request.auth.uid in couple.data.members;
            }
            
            allow read, write: if isCoupleMember();
        }
    }
  }
}
